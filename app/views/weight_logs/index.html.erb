<h1>Listing weight_logs</h1>

<table>
  <tr>
    <th>created</th>
    <th>weight</th>
  </tr>

<% @weight_logs.each do |weight_log| %>
  <tr>
    <td><%= weight_log.created_at.strftime("%Y-%m-%d") %></td>
    <td><%= weight_log.weight %> lbs</td>
  </tr>
<% end %>
</table>

<br />
<p>
  <h5>Starting Weight: <%= current_user.starting_weight %></h5>
</p>  
<p>
  <h5>Weight Goal: <%= current_user.weight_goal %></h5> 
</p>  
<br />

<%= link_to 'New Weight log', new_user_weight_log_path(current_user.id) %>|<%= link_to 'Edit Weight Goal', edit_user_path(current_user.id) %>
