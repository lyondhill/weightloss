<h1>Listing chats</h1>

<table>
  <tr>
    <th>Created_at</th>
    <th>User</th>
    <th>Message</th>
  </tr>

<% @chats.each do |chat| %>
  <tr>
    <td><%= chat.created_at.strftime('%m/%d/%Y %H:%M') %> - </td>
    <td><%= chat.try(:user).try(:username) %>: </td>
    <td><%= chat.message %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Chat', new_chat_path %>
